<Window x:Class="BatchRenameNew.NewRuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRenameNew"
        mc:Ignorable="d"
        Left="500" Top="170"
        Title="NewRuleWindow" Height="374" Width="278" Loaded="Window_Loaded">
    <Canvas Background="Azure">
        <TextBlock FontWeight="Bold" FontSize="30" Text="NEW RULE" FontFamily="Champagne &amp; Limousines" Canvas.Left="63" Canvas.Top="29"/>
        <Label Content="Name" Canvas.Left="24" Canvas.Top="93"></Label>
        <ComboBox x:Name="RulesCbb" Canvas.Left="78" Canvas.Top="92" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Canvas x:Name="canvasField" Height="134" Width="230" Canvas.Top="139" Canvas.Left="24"/>
        <Button x:Name="CreateBtn" Content="Create rule" Click="CreateBtn_Click" Canvas.Left="88" Canvas.Top="278" />
    </Canvas>
</Window>
