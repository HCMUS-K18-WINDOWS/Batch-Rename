<Window x:Class="BatchRenameNew.EditRuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRenameNew"
        mc:Ignorable="d"
        Left="500" Top="170"
        Title="EditRuleWindow" Height="374" Width="278" Loaded="Window_Loaded">
    <Canvas Background="Azure">
        <TextBlock FontWeight="Bold" FontSize="30" Text="EDIT RULE" FontFamily="Champagne &amp; Limousines" Canvas.Left="66" Canvas.Top="29"/>
        <Label Content="Type" Canvas.Left="24" Canvas.Top="93"></Label>
        <Label Canvas.Left="78" Canvas.Top="93" Width="120" Content="{Binding Name}" Height="24"></Label>
        <Canvas x:Name="canvasField" Height="134" Width="230" Canvas.Top="139" Canvas.Left="24"/>
        <Button x:Name="EditBtn" Content="Edit rule" Click="CreateBtn_Click" Canvas.Left="96" Canvas.Top="278" />
    </Canvas>
</Window>
